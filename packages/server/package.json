{
	"name": "@donew-innovations/mentoring-api",
	"version": "0.0.0",
	"description": "The source code for the DoNew Mentoring API server",
	"private": true,
	"main": "./build/index.js",
	"exports": "./build/index.js",
	"type": "module",
	"engines": {
		"node": "16",
		"pnpm": "7"
	},
	"scripts": {
		"clean": "del-cli build/ coverage/ *.log",
		"build": "tsup",
		"watch": "tsup --watch",
		"format:code": "xo --fix {source,tests}/**/*.ts",
		"format:rest": "prettier --write --ignore-path .gitignore .",
		"format": "run-s format:*",
		"lint:code": "xo {source,tests}/**/*.ts",
		"lint:rest": "prettier --check --ignore-path .gitignore .",
		"lint": "run-s lint:*",
		"jest": "",
		"test:tsc": "tsc --project config/tsconfig.json",
		"test:lib": "cross-env TS_NODE_PROJECT=config/tsconfig.json NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
		"develop": "run-p watch",
		"compile": "run-s clean build",
		"test": "run-s compile lint test:*",
		"prepare": "bash -c \"[[ -z \\\"$FIREBASE_DEPLOY\\\" ]] && pnpm run-s compile\""
	},
	"dependencies": {
		"@google-cloud/functions-framework": "3.0.0",
		"chalk": "5.0.1",
		"class-transformer": "0.5.1",
		"cors": "2.8.5",
		"ejs": "3.1.7",
		"express": "4.18.1",
		"express-jsdoc-swagger": "1.6.7",
		"express-openapi-validator": "4.13.7",
		"express-rate-limit": "6.4.0",
		"express-request-id": "2.0.1",
		"fengari": "0.1.4",
		"firebase-admin": "10.1.0",
		"firebase-functions": "3.20.1",
		"flua": "0.2.2",
		"got": "12.0.4",
		"helmet": "5.0.2",
		"nanoid": "3.3.3",
		"redent": "4.0.0",
		"winston": "3.7.2"
	},
	"devDependencies": {
		"@donew-innovations/eslint-config": "0.0.1",
		"@donew-innovations/prettier-config": "0.0.1",
		"@donew-innovations/tsconfig": "0.0.1",
		"@types/cors": "2.8.12",
		"@types/ejs": "3.1.0",
		"@types/express": "4.17.13",
		"@types/express-request-id": "1.4.3",
		"@types/jest": "27.5.0",
		"@types/node": "17.0.31",
		"@types/swagger-ui-express": "4.1.3",
		"cross-env": "7.0.3",
		"del-cli": "4.0.1",
		"jest": "28.0.3",
		"jest-to-match-shape-of": "1.3.2",
		"npm-run-all": "4.1.5",
		"prettier": "2.6.2",
		"serve": "13.0.2",
		"ts-jest": "28.0.0-next.3",
		"ts-node": "10.7.0",
		"tsup": "5.12.6",
		"typescript": "4.6.4",
		"xo": "0.48.0"
	},
	"tsup": {
		"entry": [
			"source/provider/init/index.ts"
		],
		"format": [
			"esm"
		],
		"target": "esnext",
		"tsconfig": "config/tsconfig.json",
		"outDir": "build/"
	},
	"xo": {
		"prettier": true,
		"extends": "@donew-innovations/eslint-config",
		"parserOptions": {
			"project": "config/tsconfig.json"
		}
	},
	"prettier": "@donew-innovations/prettier-config",
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"globals": {
			"ts-jest": {
				"useESM": true
			}
		},
		"collectCoverage": false,
		"coverageProvider": "v8",
		"testTimeout": 30000,
		"testMatch": [
			"**/tests/**/*.test.[jt]s"
		],
		"setupFilesAfterEnv": [
			"./tests/setup.ts"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"(\\.{1,2}/.*)\\.js$": "$1"
		}
	}
}
